[template public toTex(e : Section)  ]
[if (not e.title.oclIsUndefined())]
[if (level = 2)]
\chapter{[title.toTex()/]}
[elseif (level = 3)]
\section{[title.toTex()/]}
[elseif (level = 4)]
\subsection{[title.toTex()/]}
[elseif (level = 5)]
\subsubsection{[title.toTex()/]}
[elseif (level = 6)]
\paragraph{[title.toTex()/]}
[/if]	
[e.content.toTex()/]
[/if]
