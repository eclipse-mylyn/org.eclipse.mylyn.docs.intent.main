[if (not(l.items->isEmpty()) and not(l.items->first().items->isEmpty()))]
\begin{[l.items->first().listEnv()/]}
[for (li : ListItem | l.items->first().items)]
  \item [li.toTex()/]
[/for]
\end{[l.items->first().listEnv()/]}
[/if]
[/template]

